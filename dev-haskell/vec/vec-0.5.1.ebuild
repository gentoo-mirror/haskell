# See <https://hackage.haskell.org/package/vec-0.4.1/revision/1.cabal>
REQUIRED_USE="adjunctions? ( distributive )"

CABAL_CHDEPS=(
	'base          >=4.12.0.0 && <4.21' 'base          >=4.12.0.0'
)

RDEPEND=">=dev-haskell/boring-0.2.2:=[profile?] <dev-haskell/boring-0.3:=[profile?]
	>=dev-haskell/fin-0.3.1:=[profile?] <dev-haskell/fin-0.4:=[profile?]
	>=dev-haskell/indexed-traversable-0.1.4:=[profile?] <dev-haskell/indexed-traversable-0.2:=[profile?]
	>=dev-lang/ghc-9.0.2:=
	>=dev-haskell/hashable-1.4.4.0:=[profile?] <dev-haskell/hashable-1.6:=[profile?]
	>=dev-haskell/quickcheck-2.14.2:=[profile?] <dev-haskell/quickcheck-2.16:=[profile?]
	adjunctions? ( distributive? ( >=dev-haskell/adjunctions-4.4.2:=[profile?] <dev-haskell/adjunctions-4.5:=[profile?] ) )
	distributive? ( >=dev-haskell/distributive-0.6.2:=[profile?] <dev-haskell/distributive-0.7:=[profile?] )
	semigroupoids? ( >=dev-haskell/semigroupoids-6.0.1:=[profile?] <dev-haskell/semigroupoids-6.1:=[profile?] )
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-3.4.1.0
	test? ( >=dev-haskell/inspection-testing-0.5.0.3 <dev-haskell/inspection-testing-0.6
		dev-haskell/tagged )
"

src_configure() {
	haskell-cabal_src_configure \
		$(cabal_flag adjunctions adjunctions) \
		$(cabal_flag distributive distributive) \
		$(cabal_flag semigroupoids semigroupoids)
}
