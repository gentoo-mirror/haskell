LICENSE="AGPL-3"
SLOT="0/${PV}"

RDEPEND=">=dev-haskell/flatparse-0.5.2.0:=[profile?] <dev-haskell/flatparse-0.5.3:=[profile?]
	<dev-haskell/text-2.2:=[profile?]
