src_prepare() {
	haskell-cabal_src_prepare

	sed -e 's/^version:.*/&.9999/' -i ${PN}.cabal || die # just to distinct from release install
}

src_configure() {
	haskell-cabal_src_configure \
		--flag=pedantic
}
