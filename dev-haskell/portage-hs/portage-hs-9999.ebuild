EAPI=8

# ebuild generated by hackport 0.9.1.0.9999
#hackport: flags: +gentoo-tests,+pedantic

CABAL_FEATURES="lib profile haddock hoogle hscolour test-suite"
inherit haskell-cabal git-r3

DESCRIPTION="Data structures and functions for interacting with the Portage package manager"
HOMEPAGE="https://github.com/gentoo-haskell/cabal-portage/tree/main/portage-hs"
EGIT_REPO_URI="https://github.com/gentoo-haskell/cabal-portage.git"

S="${WORKDIR}/${P}/${PN}"
CABAL_FILE="${S}/${PN}.cabal"

LICENSE="AGPL-3"
SLOT="0/${PV}"

RDEPEND="~dev-haskell/parsable-9999:=[profile?]
	<dev-haskell/text-2.2:=[profile?]
	>=dev-lang/ghc-9.0.2:=
"
DEPEND="${RDEPEND}
	>=dev-haskell/cabal-3.4.1.0
	test? ( <dev-haskell/conduit-1.4
		dev-haskell/flatparse
		<dev-haskell/list-t-1.1
		~dev-haskell/parsable-test-9999
		dev-haskell/pretty-simple
		<dev-haskell/quickcheck-2.16
		<dev-haskell/tasty-1.6
		<dev-haskell/tasty-hunit-0.11 )
"
BDEPEND="test? ( sys-apps/pkgcore )"

src_prepare() {
	haskell-cabal_src_prepare

	sed -e 's/^version:.*/&.9999/' -i ${PN}.cabal || die # just to distinct from release install
}

src_configure() {
	haskell-cabal_src_configure \
		--flag=gentoo-tests \
		--flag=pedantic
}
