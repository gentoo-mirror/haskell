EAPI=8

# ebuild generated by hackport 0.8.0.0.9999
#hackport: flags: -parsec-struct-diff

CABAL_PN="Cabal"

# Give it a different version number so we don't get collisions
CABAL_PV="3.6.3.0.1"

CABAL_FEATURES="lib profile haddock hoogle hscolour"
CABAL_FEATURES+=" nocabaldep" # in case installed Cabal is broken
inherit haskell-cabal

# Make sure these get reset to their original values
S="${WORKDIR}/${CABAL_PN}-${PV}"
CABAL_FILE="${S}/${CABAL_PN}.cabal"

DESCRIPTION="A framework for packaging Haskell software"
HOMEPAGE="https://www.haskell.org/cabal/"

LICENSE="BSD"
SLOT="0/${PV}"
KEYWORDS="~amd64 ~x86 ~amd64-linux ~x86-linux"

# The new version needs to match CABAL_PV
CABAL_CHDEPS=(
	'version:       3.6.3.0' 'version:       3.6.3.0.1'
)

RDEPEND="
	>=dev-haskell/process-1.1.0.2:=[profile?] <dev-haskell/process-1.7:=[profile?]
	>=dev-lang/ghc-8.4.3:=
"
DEPEND="${RDEPEND}
"

src_configure() {
	haskell-cabal_src_configure \
		--flag=-parsec-struct-diff
}
